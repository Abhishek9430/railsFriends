<% if user_signed_in? %>
  <h1>Friends List</h1>
  <table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
      <th>Delete Friend</th>
    </tr>
  </thead>



  <div id="friends">

    <% @friends.each do |friend| %>
      <%= render friend %>

    <% end %>

  </div>
  </table>
  <br>
  <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
<% else %>
<h1>HELLO WORLD</h1>
<p>this is first web page</p>

<% end %>
